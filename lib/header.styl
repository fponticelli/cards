radius = 4px

button-bg-color = #f0f0f0
button-bg-active-color = #fcfcfc
button-br-color = #ddd
button-color = #888

> .main-bar
  width 20%
  text-align left
> .context-bar
  width 60%
  text-align center
> .side-bar
  width 20%
  text-align right

button
  color button-color
  text-shadow 1px 1px 1px rgba(255,255,255,0.9)
  background-color button-bg-color
  border 1px solid button-br-color
  padding 0 4px 1px 4px
  min-width 18px
  height 18px
  margin 0
  background color
  display inline-block
  margin-right 2px
  box-shadow 1px 1px 0.5px rgba(0,0,0,.3)
  &:last-child
    margin-right 0
  &.active
    background-color button-bg-active-color

button
	border-radius radius

.btn-group
	> *
    margin-right 0
    border-radius 0
	:first-child
		border-top-left-radius radius
		border-bottom-left-radius radius
	:last-child
		border-top-right-radius radius
		border-bottom-right-radius radius