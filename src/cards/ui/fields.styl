pad = 0.2em

.fields
  position absolute
  top toolbar-height
  overflow auto
  width 100%
  fill-height-except-toolbar()
  user-select none
  > div
    margin-top pad
    display table
    width 100%
    //table-layout fixed
    //border-collapse collapse
    .field
      display table-row
      > div
        display table-cell
      .key-container
        padding pad 0 pad pad
        .key
          background-color light-bg-color
          padding pad
      .value-container
        width 70%
        padding pad pad*2 pad pad*1.5
      &.active
        background-color rgba(0,100,200,0.1)