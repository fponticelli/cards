radius = 3px

.toolbar
	background-color toolbar-bg-color
	width 100%
	display table
	padding 2px
	height toolbar-height
	z-index 10
	position absolute
	user-select none
	bar-shadow-bottom()
	> div
		display table-row
		> div
			display table-cell
	.center
		text-align center
	.right
		text-align right
	.btn-group
		> *
			margin-right 0
			border-radius 0
		:first-child
			border-top-left-radius radius
			border-bottom-left-radius radius
		:last-child
			border-top-right-radius radius
			border-bottom-right-radius radius