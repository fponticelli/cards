toolbar-height = 22px
toolbar-from-bottom()
	top calc(100% - 22px)

fill-height-except-toolbar()
	height calc(100% - 22px)

bar-shadow-bottom()
	box-shadow 0px 1px 2px rgba(0,0,0,0.1)

bar-shadow-top()
	box-shadow 0px -1px 2px rgba(0,0,0,0.1)

bar-shadow-right()
	box-shadow 1px 0px 2px rgba(0,0,0,0.1)