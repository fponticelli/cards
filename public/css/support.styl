.blink
  animation-name blinker
  animation-duration 1s
  animation-timing-function linear
  animation-iteration-count infinite

@keyframes blinker
  0%
    opacity 0.7
  1%
    opacity 1
  50%
    opacity 1
  51%
    opacity 0.7
  100%
    opacity 0.7

p.desc
  font-size 60%
  color #fff
  background-color #ddd
  text-shadow 0.5px 0.5px 0px rgba(0,0,0,0.4)
  margin 0 -22px
  padding 0 0.5em

p.note
  font-size 80%
  color #999
  margin-top 0
  margin-bottom 0