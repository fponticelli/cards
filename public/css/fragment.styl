marker-color = #cba
marker-background-color = rgba(240,220,200,0.25)
marker-background-light = rgba(255,235,215,0.5)
marker-pos-before = 0.85em
marker-pos-after = -0.5em

tooltip-marker-color = #f96
link-color = #039

.strong
	font-weight bold
.emphasis
	font-style italic
.strike
	text-decoration line-through
[title]
	&:before
		display block
		position absolute
		top -0.2em
		left -0.5em
		z-index -1
		color tooltip-marker-color
		content "\f069";
		font-family: FontAwesome;
		font-style: normal;
		font-weight: normal;
		line-height: 1;
		font-size: 0.3em
		font-smoothing: antialiased;

.fragment
	display inline
	position relative

	a
		color link-color
	.content
		white-space pre
		position relative
		&.empty
			padding 0 0.25em
			background-color marker-background-light
		&.empty:focus, &:focus
			background-color marker-background-color
			border-bottom 2px solid marker-color